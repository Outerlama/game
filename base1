import random
#Player stats
HP = 10
ATT = 5
DEF = 3
SPE = 0
#Easy stats
EHP = random.randint(5,10)
EAT = random.randint(3,7)
EDE = random.randint(1,3)
ESP = random.randint(0,1)
#Special
op = "Easy, Medium, Hard" # Displays the text at the beginning
Dev = True # Used for debugging and testing 
active1 = False # DO NOT REMOVE
active2 = False # DO NOT REMOVE
active3 = False # DO NOT REMOVE
admin = False # Forgot what this does
#Modifers
ModChance = random.randint(1,100)
Small = False 
Large = False
#EasyBossNames
ENChance = random.randint(1,2)
EN1 = "slime"
EN2 = "snake"
EN3 = "Jyinxy"

print(op)
fight = input("What mode do you want? >> ")

if "easy" in fight: # entrance for the easy bosses
    if ENChance == 1: 
        print("\nA wild " + EN1 + " appears! ")
        active1 = True
    if ENChance == 2:
        print("\nA wild " + EN2 + " appears! ")
        active2 = True
    if ENChance == 3:
        print("\nA wild " + EN3 + " appears! ")
        active3 = True

if active1 == True:
    if Dev == True:
        print(EHP,EAT,EDE,ESP)
    q1 = input("|Attack| |Defend| |Stats| >>")
    if "attack" in q1:
        dmg1 = random.randint(0,ATT)
        print("You swing at the " + EN1 + " for",dmg1,"damage!")
        EHP = EHP - dmg1 
        print("The " + EN1 + " is now at",EHP,"HP!")

if active2 == True:
    if Dev == True:
        print(EHP,EAT,EDE,ESP)
    q1 = input("|Attack| |Defend| |Stats|")
    if "attack" in q1:
        dmg1 = random.randint(0,ATT)
        print("You swing at the " + EN2 + " for ",dmg1,"damage!")
        EHP = EHP - dmg1 
        print("The " + EN1 + " is now at",EHP,"HP!")
        
    
